<Window x:Class="RentManager.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RentManager - Inicio de sesión"
        Height="320" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="RentManager"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Email" Margin="0,0,0,6"/>
        <TextBox x:Name="txtEmail" Grid.Row="2" Height="28" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="3" Text="Contraseña" Margin="0,0,0,6"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="4" Height="28" Margin="0,0,0,18"/>

        <Button Grid.Row="5"
                Content="Iniciar sesión"
                Height="32"
                Click="BtnLogin_Click"/>
    </Grid>
</Window>
