<Window x:Class="RentManager.Views.InquilinoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inquilino"
        Height="520" Width="430"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo"
                   Text="Nuevo inquilino"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,18"/>

        <!-- Formulario -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Nombre label -->
                <RowDefinition Height="Auto"/>
                <!-- Nombre input -->
                <RowDefinition Height="Auto"/>
                <!-- Apellidos label -->
                <RowDefinition Height="Auto"/>
                <!-- Apellidos input -->
                <RowDefinition Height="Auto"/>
                <!-- DNI label -->
                <RowDefinition Height="Auto"/>
                <!-- DNI input -->
                <RowDefinition Height="Auto"/>
                <!-- Teléfono label -->
                <RowDefinition Height="Auto"/>
                <!-- Teléfono input -->
                <RowDefinition Height="Auto"/>
                <!-- Email label -->
                <RowDefinition Height="Auto"/>
                <!-- Email input -->
                <RowDefinition Height="Auto"/>
                <!-- Observaciones label -->
                <RowDefinition Height="Auto"/>
                <!-- Observaciones input -->
            </Grid.RowDefinitions>

            <TextBlock Text="Nombre"/>
            <TextBox x:Name="txtNombre" Grid.Row="1" Margin="0,0,0,10"/>

            <TextBlock Text="Apellidos" Grid.Row="2"/>
            <TextBox x:Name="txtApellidos" Grid.Row="3" Margin="0,0,0,10"/>

            <TextBlock Text="DNI" Grid.Row="4"/>
            <TextBox x:Name="txtDni" Grid.Row="5" Margin="0,0,0,10"/>

            <TextBlock Text="Teléfono" Grid.Row="6"/>
            <TextBox x:Name="txtTelefono" Grid.Row="7" Margin="0,0,0,10"/>

            <TextBlock Text="Email" Grid.Row="8"/>
            <TextBox x:Name="txtEmail" Grid.Row="9" Margin="0,0,0,10"/>

            <TextBlock Text="Observaciones" Grid.Row="10"/>
            <TextBox x:Name="txtObservaciones"
                     Grid.Row="11"
                     Height="70"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
        </Grid>

        <!-- Botonera -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,18,0,0">
            <Button Content="Cancelar" Click="BtnCancelar_Click" Margin="0,0,10,0" MinWidth="90"/>
            <Button Content="Guardar" Click="BtnGuardar_Click" MinWidth="90"/>
        </StackPanel>
    </Grid>
</Window>
